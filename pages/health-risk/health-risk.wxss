.risk-tags{
  padding: 20rpx 0;
}
.risk-tags .redTag, .risk-tags .orangeTag, .risk-tags .yellowTag{
  display: inline-block;
  padding: 10rpx 20rpx;
  color: #ffffff;
  border-radius: 10rpx;
  margin: 10rpx;
  font-size: 24rpx;
}
.redTag{
  background-color: #eb6868;
}
.orangeTag{
  background-color: #f4a148;
}
.yellowTag{
  background-color: #fcdc3e;
}
.weui-media-box_appmsg.doctor{
  align-items: flex-start;
}
.doctor .weui-media-box__desc{
  position: relative;
}
.doctor .weui-media-box__desc > image{
  position: relative;
  z-index: 1;
}
.doctor .message{
  position: absolute;
  width: 427rpx; height: 92rpx;
  padding: 40rpx;
  color: #ffffff;
  top: 0;
  left: 0;
  z-index: 2;
}