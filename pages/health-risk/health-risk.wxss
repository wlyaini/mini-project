/* pages/health-risk/health-risk.wxss */
page{
  background-color: #535363;
}
.white-box{
  background-color: #ffffff;
  border-radius: 10rpx;
  margin: 60rpx 30rpx 30rpx;
  min-height: 200rpx;
  position: relative;
}
.tag-head{
  height: 22rpx; width: 194rpx;
  position: absolute;
  left: 50%;
  top: -20rpx;
  margin-left: -97rpx;
}
.gap-line{
  position: relative;
  height: 2rpx;
  border-top: 1rpx dashed #dcddeb; 
  border-bottom: 1rpx dashed #dcddeb; 
  /* background-color: #dcddeb; */
}
.gap-line:before{
  content: "";
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #535363;
  left: -10rpx;
  top: -10rpx;
}
.gap-line:after{
  content: "";
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #535363;
  right: -10rpx;
  top: -10rpx;
}
.risk-box{
  padding: 40rpx 20rpx 74rpx;
}
