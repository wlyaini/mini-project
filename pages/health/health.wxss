/* pages/health/health.wxss */
.flex-box{
  display: flex;
}
.tag-head{
  text-align: center;
  margin-top: 30rpx;
  padding: 0 40rpx;
}
.btn-report{
  width: auto !important;
  color: #485464;
  padding: 20rpx 40rpx !important;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.btn-report > text{
  font-weight: normal;
  font-size: 36rpx;
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
}
.health-body{
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #fff;
}
.h-title{
  padding-left: 30rpx;
  overflow: hidden;
}
.btn-circle{
  font-size: 24rpx;
  font-weight: normal;
  width: auto !important;
  display: inline-block;
  padding: 14rpx;
  border-radius: 14rpx;
  background-color: #f6f7f8;
  margin-left: 20rpx !important;
}
.btn-circle > text{
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
}
.data-list .num{
  font-weight: bold;
  font-size: 40rpx;
  margin: 0 10rpx;
}
.data-list .unit{
  color: #999;
  font-size: 14px;
}
.data-list .weui-media-box__desc{
  font-size: 14px;
}
.data-list .weui-cell{
  padding: 16px 0;
}
.data-list .weui-cells:after{
  border-bottom: none;
}
.tag{
  display: inline-block;
  font-size: 12px;
  padding: 2px 10px;
  border-radius: 10px;
  color: #fff;
}
.tag-yellow{
  background: #f1ca4d;
}
.tag-orange{
  background: #ff5400;
}
.tag-green{
  background: #04c0af;
}